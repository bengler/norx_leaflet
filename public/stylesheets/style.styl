buttonColor = #ffb400
@import url(http://fonts.googleapis.com/css?family=Lato:300,400,700,900)
@import 'leaflet.css'
@import 'interface'

body
  height: 100%
  width: 100%
  padding: 0
  font: 14px "Lato"
  //, Helvetica, Arial, sans-serif
  overflow: hidden
  user-select: none
  a
    color: #00B7FF
  .waitForLoad
    display: none
  #loader
    margin-top: 200px
    text-align: center

#map
  position: absolute
  top: 0px
  bottom: 0
  left: 0
  right: 0
  .leaflet-control-container
    .leaflet-left
      top: 60px !important
      margin-left: 50px !important
  .leaflet-marker-pane
    .leaflet-div-icon
      background-color: rgba(#666, 0.9)
      border: 1px solid #fff
      border-radius: none
    .corner-nw
      cursor: nw-resize
    .corner-sw
      cursor: sw-resize
    .corner-se
      cursor: se-resize
    .corner-ne
      cursor: ne-resize
  .moveable
    cursor: move
    opacity: 0
    border-radius: 30px

body
  width: 100%
  overflow-x: hidden
  margin: 0
  padding: 0
  .navbar .navbar-inner
    margin-left: 10px !important
  #loader, #modelSpinner, #tileSpinner
    display: none !important

